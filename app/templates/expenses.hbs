<header class="thin">
	<h1>Add expense</h1>
	{{back-button}}
</header>
<section class="expenses {{unless category 'categories'}} {{unless node 'categories'}}">
{{#if category}}
	{{#if node}}
		<form {{action 'submit' on='submit' }}>
			<label>
				<strong>Amount</strong>
				{{input type="number" step="any" required=true pattern="^\d+\.\d{2}$" value=item.amount placeholder="Example: 120.20"}}
			</label>
			<label>
				<strong>Details</strong>
				{{textarea rows="3" value=item.description placeholder="Example: Tipped the hair stylist"}}
			</label>
			<hr>
			<p>
				<button type="submit">Add</button>
			</p>
		</form>
	{{else}}
		{{#each category.nodes as |node|}}
		<figure {{action 'selectNode' node}}>
			<img src="assets/images/icons/{{category.id}}-{{node.id}}.png">
			<h3>{{node.name}}</h3>
		</figure>
		{{/each}}
	{{/if}}
{{else}}
	{{#each model as |category|}}
	<figure {{action 'selectCategory' category}}>
		<img src="assets/images/icons/{{category.id}}.png">
		<h3>{{category.name}}</h3>
	</figure>
	{{/each}}
{{/if}}
</section>

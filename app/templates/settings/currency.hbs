<header class="thin">
	<h1>Change currency</h1>
	{{back-button}}
</header>

<section class="thin">
	{{input type="text" value=query placeholder="Search for currency"}}
	{{#list-view tagName="ul" content=currencies as |currency|}}
		<li class="{{if currency.selected 'selected-currency'}}" {{action 'selectCurrency' currency}}>
			{{currency.name}} &middot; {{#if currency.symbol}}{{currency.symbol}}{{else}}{{currency.id}}{{/if}}
		</li>
	{{else}}
		<li>No match.</li>
	{{/list-view}}
</section>
